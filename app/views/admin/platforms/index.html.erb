<% title "Platforms - Libraries.io" %>
<% description "All the open source platforms that packages have been published to" %>
<h1>
  <%= fa_icon 'archive' %>
  Package Managers
</h1><hr>
<div class='row'>
  <div class="col-md-12">
    <div class="row">
      <% @platforms.each do |platform| %>
      <div class='platform col-xs-6 col-sm-3 col-md-3'>
        <h4>
          <div class="pictogram pictogram-<%= platform['key'].downcase %>"></div>
          <div class="blurb">
            <%= link_to platform_name(platform['key']), admin_platform_path(platform['key'].downcase) %>
            <small><%= number_to_human platform['doc_count'] %> Packages</small>
          </div>
        </h4>
      </div>
      <% end %>
    </div>
  </div>
</div>
